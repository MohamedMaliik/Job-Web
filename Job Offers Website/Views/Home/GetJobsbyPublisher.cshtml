@model IEnumerable<Job_Offers_Website.Models.JobsViewModel>


@foreach (var gr in Model)
{
     <h3>@gr.JobTitle</h3>
<table class="table table-bordered table-hover">

    <tr>

        <th>
           أسم الباحث
        </th>
        <th>

            نص الرسالة
        </th>
        <th>

            تاريخ الارسال
        </th>

    </tr>
    @foreach (var item in gr.item)
    {


        <tr>
            <td>
                @item.user.UserName

            </td>
            <td>
                @item.Message

            </td>
            <td>

                @item.ApplayDate
            </td>

        </tr>


    }
</table>

}   