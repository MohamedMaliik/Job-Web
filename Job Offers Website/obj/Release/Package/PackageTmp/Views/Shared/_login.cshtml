@using  Microsoft.AspNet.Identity
@using WebApplication1.Models

@if (Request.IsAuthenticated)
{

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoff" }))
    {

        var db = new  ApplicationDbContext();
        var UserId = User.Identity.GetUserId();
        var currentUser = db.Users.Where(a => a.Id == UserId).SingleOrDefault();

        @Html.AntiForgeryToken();

        <ul class="nav navbar-nav navbar-right">
 
       <li class="dropdown">

           <a href="#" class="dropdown-toggle" data-toggle="dropdown" >
                <span class="glyphicon glyphicon-user" ></span>
               <strong>مرحبا بك يا :@currentUser.UserName</strong>
               <span class="glyphicon glyphicon-chevron-down"></span>
           </a>
                 
           <ul class="dropdown-menu">
               <li>
                   <div class="navbar-user">
                       <div class="row">

                           <div class="col-lg-4">
                               <p class="text-center">
                                   <span class="glyphicon glyphicon-user img-size"></span>
                               </p>
                           </div>
                           <div class="col-lg-8">

                               <p class="text-right">
                                   @currentUser.UserName

                               </p>
                               @if (currentUser.UserType == "الباحثون")
                               {

                                <a href="~/Home/GetJobsbyUsers" class="btn btn-success btn-block">الوظائف التي قمت بالتقدم اليها </a>

                               }
                               else

                               {
                                <a href="~/Home/GetJobsbyPublisher" class="btn btn-success btn-block">الوظائف التي قمت بنشرها </a>
                                <a href="~/Jobs/Create" class="btn btn-success btn-block">أضافة وظيفة جديدة</a>



                               }
                               <a href="~/Account/EditProfile" class="btn btn-primary btn-block">تعديل الحساب</a>  
                           </div>

                       </div>

                   </div>
               </li>
               <li class="divider"></li>
               <li>

                   <div>
                       <div class="row">

                           <div class="col-lg-12">
                               <p>
                                   <a href="Javascript:document.getElementById('logoff').submit() "class="btn btn-danger btn-block" > تسجيل الخروج</a>

                               </p>

                           </div>
                       </div>
                   </div>
               </li>
           </ul>

       </li>      



            <!--
            <li>
                @Html.ActionLink("مرحبا" + User.Identity.GetUserName(), "Index", "Manage")
            </li>
            <li>
                <a href="Javascript:document.getElementById('logoff').submit()"> تسجيل الخروج</a>
            </li>
                -->
        </ul>
    }

}
else
{
<ul class="nav navbar-nav navbar-right">

    <li>

        <a href="~/Account/Login">
            <i class="glyphicon glyphicon-user">
                تسجيل الدخول
            </i>

        </a>
    </li>

    <li>

        <a href="~/Account/Register">
            <i class="glyphicon glyphicon-lock">
                اشتراك
            </i>

        </a>
    </li>

</ul>
}